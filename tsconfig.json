{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": false,
    "strictBindCallApply": true,
    "target": "ES6",
    "incremental": true,
    "paths": {
      "@/app/*": [
        "src/app/*"
      ],
      "@/public/*": [
        "public/*"
      ],
      "@/shared/*": [
        "src/shared/*"
      ],
      "@/components/*": [
        "src/shared/components/*"
      ],
      "@/lib/*": [
        "src/shared/lib/*"
      ],
      "@/layouts/*": [
        "src/widgets/layouts/*"
      ],
      "@/entities/*": [
        "src/entities/*"
      ],
      "@/features/*": [
        "src/features/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ]
    },
  },
  "exclude": [
    ".github",
    ".next",
    "_site",
    "coverage",
    "cypress",
    "node_modules",
    "public"
  ],
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "jest.config.js",
    "jest.setup.js",
    "./sentry.client.config.js",
    "./sentry.server.config.js",
    "src/shared/lib/i18n.config.js",
    "./next-i18next.config.js",
    "./next-sitemap.config.js",
    "./orval.config.js",
    "**/*.ts",
    "**/*.tsx"
  ]
}
